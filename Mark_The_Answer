#include <iostream>
using namespace std;

int main()
{
    int n,j=0;
    long int x;
    cin>>n>>x;
    long int a[n],c=0;
    
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    for(int i=0;i<n;i++)
    {
        if(a[i]<=x)
        {
            c++;
        }
        else
        {
            if(j<1)
                j++;
            else
                break;
        }
    }
    cout<<c;
    //cout << "Hello World!" << endl;
    return 0;
}
