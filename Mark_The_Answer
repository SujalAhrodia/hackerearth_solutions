#include <iostream>
using namespace std;

int main()
{
    int n,j=0;
    long int x;
    cin>>n>>x;
    long int a[n],c=0;
    
    for(int i=0;i<n;i++)
    {
        cin>>a[i];
    }
    for(int i=0;i<n;i++)
    {
        if(a[i]>x)
            j++;
        if(a[i]<=x && j<2)
            c++;
    }
    cout<<c;
    //cout << "Hello World!" << endl;
    return 0;
}
